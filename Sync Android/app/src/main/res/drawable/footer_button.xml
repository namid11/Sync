<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <size
                android:width="32dp"
                android:height="32dp"/>
            <solid android:color="#10FFFFFF"/>
            <padding
                android:top="8dp"
                android:bottom="8dp"
                android:right="8dp"
                android:left="8dp"/>
            <corners
                android:radius="24dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <size
                android:width="32dp"
                android:height="32dp"/>
            <solid android:color="#00FFFFFF" />
            <padding
                android:top="8dp"
                android:bottom="8dp"
                android:right="8dp"
                android:left="8dp"/>
            <corners
                android:radius="24dp"/>
        </shape>
    </item>
</selector>