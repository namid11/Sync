<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <size
                android:height="50dp" />
            <padding
                android:left="30dp"
                android:right="30dp" />
            <corners android:radius="25dp" />
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorSubPrimary"
                android:angle="315" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <size
                android:height="50dp" />
            <padding
                android:left="30dp"
                android:right="30dp" />
            <corners android:radius="25dp" />
            <gradient
                android:startColor="@color/colorPrimaryLock"
                android:endColor="@color/colorSubPrimaryLock"
                android:angle="315" />
        </shape>

    </item>

</selector>