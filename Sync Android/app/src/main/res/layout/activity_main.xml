<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/trackView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EBEBEB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/demoView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/shape_rounded_corners_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/trackView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/settingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/function_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/trackView"
        app:srcCompat="@drawable/setting" />

    <ImageButton
        android:id="@+id/forward_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/function_button"
        app:layout_constraintEnd_toEndOf="@+id/settingButton"
        app:layout_constraintTop_toBottomOf="@+id/backward_button"
        app:srcCompat="@drawable/forward" />

    <ImageButton
        android:id="@+id/backward_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/function_button"
        app:layout_constraintEnd_toEndOf="@+id/settingButton"
        app:layout_constraintTop_toBottomOf="@+id/settingButton"
        app:srcCompat="@drawable/backward" />

    <ImageButton
        android:id="@+id/presen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/function_button"
        app:layout_constraintEnd_toEndOf="@+id/settingButton"
        app:layout_constraintTop_toBottomOf="@+id/forward_button"
        app:srcCompat="@drawable/presen_start" />

</androidx.constraintlayout.widget.ConstraintLayout>