<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

<!--    Button Theme   -->
    <style name="ButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryWhite</item>
        <item name="android:fontFamily">@font/muli_extralight</item>
        <item name="android:background">@drawable/button_cyan_theme</item>
    </style>

    <style name="FunctionButtonTheme" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/function_button</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="FooterButtonTheme" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/footer_button</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <!--  SeekBar Custom  -->
    <style name="SeekBarTheme" parent="Widget.AppCompat.SeekBar">
        <!--    つまみの色    -->
        <item name="android:thumbTint">@color/colorPrimaryWhite</item>
        <!--    よくわからん    -->
        <item name="android:tickMarkTint">@color/colorPrimary</item>
        <!--    シークバーの色    -->
        <item name="android:progressTint">@color/colorPrimaryWhite</item>
        <item name="android:background">@drawable/seekbar_cyan_theme</item>
    </style>

<!--    Switch Custom   -->
    <style name="SwitchTheme" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:switchPadding">10dp</item>
        <item name="android:background">@drawable/switch_cyan_theme</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryWhite</item>
        <item name="android:trackTint">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/muli_extralight</item>
    </style>

<!--    TextView Custom   -->
    <style name="TextViewTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/muli_extralight</item>
    </style>

<!--    EditText Custom   -->
    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="colorControlNormal" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/muli_extralight</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
